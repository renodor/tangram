<div id="game">
  <canvas
    data-controller="game"
    data-action="patterns:currentPatternChange@document->game#changeCurrentPattern"
    data-game-current-pattern-id-value="<%= @current_pattern.id %>"
  >
  </canvas>
  <button id="pattern-reveal">Reveal Pattern</button>

  <div
    id="patterns-menu"
    data-controller="patterns"
  >
    <div
      id="current-pattern"
      data-patterns-target="currentPattern"
      data-game-target="blabla"
      data-id="<%= @current_pattern.id %>"
      data-solved="<%= @current_pattern.solved?(current_user) %>"
      data-revealed="false"
    >
      <div data-patterns-target="patternSvg" class="pattern-svg">
        <%= svg "patterns/#{@current_pattern.name}.svg" %>
      </div>
      <div
        data-patterns-target="revealPattern"
        data-action="click->patterns#revealPattern"
        class="reveal-pattern"
      >
        <%= svg 'icons/eye_fill.svg', 'eye' %>
        <%= svg 'icons/eye_crossed.svg', 'eye-crossed display-none' %>
      </div>
    </div>
    <div id="hide-pattern-menu" data-action="click->patterns#toggle">
      <%= svg 'icons/caret' %>
    </div>
    <div id="patterns">
      <% @patterns.each do |pattern| %>
        <div
          class="pattern"
          data-patterns-target="pattern"
          data-id="<%= pattern.id %>"
          data-action="click->patterns#selectPattern"
          data-solved="<%= pattern.solved?(current_user) %>"
          data-selected="<%= pattern == @current_pattern %>"
        >
          <%= svg "patterns/#{pattern.name}.svg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>